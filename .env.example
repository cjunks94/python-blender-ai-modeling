# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Blender executable path (required)
BLENDER_EXECUTABLE_PATH="/Applications/Blender.app/Contents/MacOS/Blender"

# Flask development settings
FLASK_DEBUG=True
PORT=5001

# Anthropic API Key (required for AI features)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Security settings
SECRET_KEY=your-random-secret-key-for-sessions

# Optional: Resource cleanup interval in hours
CLEANUP_INTERVAL_HOURS=4

# Optional: Blender operation timeout in seconds  
BLENDER_TIMEOUT=30